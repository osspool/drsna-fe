{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Category Page Data Structure",
  "description": "Schema for main category pages (e.g., Aesthetic Medicine, Intimate Health, Pain Management)",
  "type": "object",
  "required": ["id", "title", "description"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier slug (e.g., 'aesthetic-medicine', 'intimate-health')"
    },
    "title": {
      "type": "string",
      "description": "Main category title (e.g., 'Aesthetic Medicine')"
    },
    "shortTitle": {
      "type": "string",
      "description": "Abbreviated title for navigation (e.g., 'Aesthetics')"
    },
    "tagline": {
      "type": "string",
      "description": "Catchy tagline (e.g., 'Transform Your Natural Beauty')"
    },
    "description": {
      "type": "string",
      "description": "Brief 1-2 sentence overview"
    },
    "longDescription": {
      "type": "string",
      "description": "Extended description (2-3 paragraphs)"
    },
    "seo": {
      "type": "object",
      "description": "SEO metadata for the category page",
      "properties": {
        "metaTitle": {
          "type": "string",
          "description": "SEO page title"
        },
        "metaDescription": {
          "type": "string",
          "description": "SEO meta description"
        },
        "keywords": {
          "type": "array",
          "items": {"type": "string"},
          "description": "SEO keywords"
        },
        "h1": {
          "type": "string",
          "description": "Main H1 heading for SEO"
        }
      }
    },
    "hero": {
      "type": "object",
      "description": "Hero section at top of page",
      "properties": {
        "headline": {
          "type": "string",
          "description": "Main hero headline"
        },
        "subheadline": {
          "type": "string",
          "description": "Supporting subheadline"
        },
        "image": {
          "type": "string",
          "description": "Hero image URL"
        },
        "video": {
          "type": "string",
          "description": "Optional hero video URL"
        },
        "cta": {
          "type": "string",
          "description": "Hero CTA button text"
        },
        "stats": {
          "type": "array",
          "description": "Optional stat badges in hero",
          "items": {
            "type": "object",
            "properties": {
              "value": {"type": "string"},
              "label": {"type": "string"}
            }
          }
        }
      }
    },
    "introduction": {
      "type": "object",
      "description": "Introduction section explaining the category",
      "properties": {
        "title": {
          "type": "string",
          "description": "Section title"
        },
        "content": {
          "type": "string",
          "description": "Main introduction text (2-3 paragraphs)"
        },
        "highlights": {
          "type": "array",
          "description": "Key highlight cards with icons",
          "items": {
            "type": "object",
            "properties": {
              "icon": {"type": "string"},
              "title": {"type": "string"},
              "description": {"type": "string"}
            }
          }
        }
      }
    },
    "subcategories": {
      "type": "array",
      "description": "List of subcategories within this category",
      "items": {
        "type": "object",
        "required": ["id", "title", "description"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Subcategory slug (e.g., 'face', 'body')"
          },
          "title": {
            "type": "string",
            "description": "Subcategory title"
          },
          "shortDescription": {
            "type": "string",
            "description": "Brief one-liner description"
          },
          "description": {
            "type": "string",
            "description": "Full description for subcategory card"
          },
          "icon": {
            "type": "string",
            "description": "Icon name (lucide-react icon)"
          },
          "image": {
            "type": "string",
            "description": "Card image URL"
          },
          "treatmentCount": {
            "type": "number",
            "description": "Number of treatments in this subcategory"
          },
          "featured": {
            "type": "boolean",
            "description": "Whether to feature prominently"
          },
          "color": {
            "type": "string",
            "description": "Brand color for this subcategory (hex)"
          }
        }
      }
    },
    "benefits": {
      "type": "object",
      "description": "Key benefits/advantages of this category",
      "properties": {
        "title": {
          "type": "string",
          "description": "Benefits section title"
        },
        "subtitle": {
          "type": "string",
          "description": "Optional subtitle"
        },
        "items": {
          "type": "array",
          "description": "List of benefit items (suggest 4-6)",
          "maxItems": 6,
          "items": {
            "type": "object",
            "properties": {
              "title": {"type": "string"},
              "description": {"type": "string"},
              "icon": {"type": "string"}
            }
          }
        }
      }
    },
    "process": {
      "type": "object",
      "description": "General journey/process for this category",
      "properties": {
        "title": {
          "type": "string",
          "description": "Process section title"
        },
        "steps": {
          "type": "array",
          "description": "Journey steps (typically 4-5)",
          "maxItems": 5,
          "items": {
            "type": "object",
            "properties": {
              "number": {"type": "number"},
              "title": {"type": "string"},
              "description": {"type": "string"},
              "duration": {"type": "string"},
              "icon": {"type": "string"}
            }
          }
        }
      }
    },
    "testimonials": {
      "type": "array",
      "description": "Category-level testimonials (limit to 3)",
      "maxItems": 3,
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "treatment": {"type": "string"},
          "rating": {"type": "number"},
          "text": {"type": "string"},
          "location": {"type": "string"},
          "image": {"type": "string"},
          "verified": {"type": "boolean"}
        }
      }
    },
    "faq": {
      "type": "array",
      "description": "Category-level FAQs (limit to 6)",
      "maxItems": 6,
      "items": {
        "type": "object",
        "properties": {
          "question": {"type": "string"},
          "answer": {"type": "string"}
        }
      }
    },
    "cta": {
      "type": "object",
      "description": "Final call-to-action section",
      "properties": {
        "title": {"type": "string"},
        "subtitle": {"type": "string"},
        "primaryButton": {"type": "string"},
        "secondaryButton": {"type": "string"},
        "phone": {"type": "string"},
        "note": {"type": "string"}
      }
    },
    "trustSignals": {
      "type": "object",
      "description": "Trust badges, certifications, awards",
      "properties": {
        "certifications": {
          "type": "array",
          "items": {"type": "string"}
        },
        "memberships": {
          "type": "array",
          "items": {"type": "string"}
        },
        "awards": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "video": {
      "type": "object",
      "description": "Optional category overview video",
      "properties": {
        "enabled": {"type": "boolean"},
        "url": {"type": "string"},
        "thumbnail": {"type": "string"},
        "title": {"type": "string"},
        "description": {"type": "string"}
      }
    }
  }
}

