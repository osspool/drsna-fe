{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Subcategory Page Data Structure",
  "description": "Schema for subcategory pages (e.g., Face, Body, Male, Female)",
  "type": "object",
  "required": ["id", "categoryId", "title", "description"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier slug (e.g., 'face', 'body', 'male', 'female')"
    },
    "categoryId": {
      "type": "string",
      "description": "Parent category ID (e.g., 'aesthetic-medicine', 'intimate-health')"
    },
    "title": {
      "type": "string",
      "description": "Subcategory title (e.g., 'Facial Aesthetic Treatments')"
    },
    "shortTitle": {
      "type": "string",
      "description": "Short title for navigation (e.g., 'Face')"
    },
    "tagline": {
      "type": "string",
      "description": "Catchy tagline (e.g., 'Sculpt, Refine, Rejuvenate')"
    },
    "description": {
      "type": "string",
      "description": "Brief 1-2 sentence overview"
    },
    "longDescription": {
      "type": "string",
      "description": "Extended description (2-3 paragraphs)"
    },
    "seo": {
      "type": "object",
      "description": "SEO metadata",
      "properties": {
        "metaTitle": {"type": "string"},
        "metaDescription": {"type": "string"},
        "keywords": {
          "type": "array",
          "items": {"type": "string"}
        },
        "h1": {"type": "string"}
      }
    },
    "hero": {
      "type": "object",
      "description": "Hero section",
      "properties": {
        "headline": {"type": "string"},
        "subheadline": {"type": "string"},
        "image": {"type": "string"},
        "backgroundImage": {"type": "string"},
        "video": {"type": "string"},
        "cta": {"type": "string"}
      }
    },
    "introduction": {
      "type": "object",
      "description": "Introduction section",
      "properties": {
        "title": {"type": "string"},
        "content": {"type": "string"},
        "image": {"type": "string"},
        "highlights": {
          "type": "array",
          "description": "Key highlights (bullet points)",
          "items": {"type": "string"}
        }
      }
    },
    "treatmentCategories": {
      "type": "array",
      "description": "Group treatments into logical categories",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Category ID (e.g., 'rejuvenation', 'contouring')"
          },
          "title": {
            "type": "string",
            "description": "Category title"
          },
          "description": {
            "type": "string",
            "description": "Category description"
          },
          "icon": {
            "type": "string",
            "description": "Icon name"
          },
          "treatments": {
            "type": "array",
            "description": "Array of treatment IDs in this category",
            "items": {"type": "string"}
          },
          "benefits": {
            "type": "array",
            "description": "Key benefits of this treatment category",
            "items": {"type": "string"}
          }
        }
      }
    },
    "treatments": {
      "type": "object",
      "description": "Detailed treatment cards data. Each key is a treatment ID",
      "patternProperties": {
        "^[a-z0-9-]+$": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "description": "Treatment title"
            },
            "shortDescription": {
              "type": "string",
              "description": "One-line description for cards"
            },
            "description": {
              "type": "string",
              "description": "Full description (2-3 sentences)"
            },
            "image": {
              "type": "string",
              "description": "Card image URL"
            },
            "icon": {
              "type": "string",
              "description": "Icon name"
            },
            "duration": {
              "type": "string",
              "description": "Treatment duration (e.g., '30-45 mins')"
            },
            "downtime": {
              "type": "string",
              "description": "Recovery time (e.g., 'Minimal', 'None')"
            },
            "results": {
              "type": "string",
              "description": "When results appear (e.g., 'Immediate', '2-4 weeks')"
            },
            "longevity": {
              "type": "string",
              "description": "How long results last (e.g., '6-12 months')"
            },
            "price": {
              "type": "string",
              "description": "Starting price (e.g., 'From Â£450')"
            },
            "benefits": {
              "type": "array",
              "description": "Key benefits (3-4 items)",
              "maxItems": 4,
              "items": {"type": "string"}
            },
            "featured": {
              "type": "boolean",
              "description": "Whether to feature prominently"
            },
            "popular": {
              "type": "boolean",
              "description": "Whether to show 'Popular' badge"
            }
          }
        }
      }
    },
    "benefits": {
      "type": "object",
      "description": "Why choose this subcategory",
      "properties": {
        "title": {"type": "string"},
        "items": {
          "type": "array",
          "maxItems": 6,
          "items": {
            "type": "object",
            "properties": {
              "title": {"type": "string"},
              "description": {"type": "string"},
              "icon": {"type": "string"}
            }
          }
        }
      }
    },
    "process": {
      "type": "object",
      "description": "Journey through treatment process",
      "properties": {
        "title": {"type": "string"},
        "steps": {
          "type": "array",
          "maxItems": 5,
          "items": {
            "type": "object",
            "properties": {
              "number": {"type": "number"},
              "title": {"type": "string"},
              "description": {"type": "string"},
              "icon": {"type": "string"}
            }
          }
        }
      }
    },
    "faq": {
      "type": "array",
      "description": "Subcategory-level FAQs (limit to 6-8)",
      "maxItems": 8,
      "items": {
        "type": "object",
        "properties": {
          "question": {"type": "string"},
          "answer": {"type": "string"}
        }
      }
    },
    "beforeAfter": {
      "type": "object",
      "description": "Before/after gallery section",
      "properties": {
        "title": {"type": "string"},
        "subtitle": {"type": "string"},
        "note": {"type": "string"},
        "gallery": {
          "type": "array",
          "description": "Optional: actual before/after images",
          "items": {
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "title": {"type": "string"},
              "before": {"type": "string"},
              "after": {"type": "string"},
              "description": {"type": "string"},
              "treatment": {"type": "string"}
            }
          }
        }
      }
    },
    "video": {
      "type": "object",
      "description": "Optional subcategory overview video",
      "properties": {
        "enabled": {"type": "boolean"},
        "title": {"type": "string"},
        "description": {"type": "string"},
        "videos": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {"type": "string"},
              "thumbnail": {"type": "string"},
              "title": {"type": "string"},
              "description": {"type": "string"}
            }
          }
        },
        "layout": {
          "type": "string",
          "enum": ["single", "grid", "feature"]
        }
      }
    },
    "cta": {
      "type": "object",
      "description": "Call-to-action section",
      "properties": {
        "title": {"type": "string"},
        "subtitle": {"type": "string"},
        "primaryButton": {"type": "string"},
        "secondaryButton": {"type": "string"},
        "note": {"type": "string"}
      }
    },
    "relatedSubcategories": {
      "type": "array",
      "description": "Related subcategories to explore",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "description": {"type": "string"},
          "image": {"type": "string"}
        }
      }
    }
  }
}

